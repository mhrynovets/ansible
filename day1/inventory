---
local:
  hosts:
    pc:
      ansible_connection: local

vms:
  vars:
    ansible_ssh_host: 127.0.0.1
    ansible_user: devops
    ansible_ssh_private_key_file: devops.pem
    ansible_python_interpreter: '/usr/bin/python3'
  children:
    webservers:
      hosts:
        webserver:
          ansible_ssh_port: 2022 
    appservers:
      hosts:
        appserver:
          ansible_ssh_port: 2122 

